<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.MedicaLife" parent="@style/Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:fontFamily">@font/poppins_font_family</item>
        <item name="fontFamily">@font/poppins_font_family</item> <!-- target android sdk versions < 26 and > 14 if theme other than AppCompat -->
        <item name="buttonStyle">@style/Theme.PrimaryButton</item>
        <item name="editTextStyle">@style/Theme.TextInputEdit</item>
        <item name="textInputStyle">@style/Theme.TextInputEdit</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/text_color_white</item>

        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/text_color_white</item>

        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>
    <style name="Theme.PrimaryButton" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/text_color_white</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Theme.SecondaryButton" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/button2_background</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Theme.TextInputEdit" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
    </style>
</resources>