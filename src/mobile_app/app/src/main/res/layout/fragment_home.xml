<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home_fragments.HomeFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/poppins_semibold"
                android:includeFontPadding="false"
                android:text="Abderrazak"
                android:textColor="@color/text_color_black"
                android:textSize="22sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:gravity="bottom"
                android:includeFontPadding="false"
                android:text="Welcome,"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="60dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/baseline_account_circle_24"
                app:tint="@color/colorPrimaryDark" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_marginBottom="16dp"
            app:columnCount="2"
            app:rowCount="2"
            app:useDefaultMargins="false">

            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="0dp"
                android:clipToPadding="true"
                app:cardBackgroundColor="#B2EBF2"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true"
                app:layout_columnSpan="2"
                app:layout_columnWeight="1"
                app:layout_gravity="fill"
                app:layout_rowSpan="1"
                app:layout_rowWeight="1">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp">

                    <ImageView
                        android:id="@+id/bpmIcon"
                        android:layout_width="160dp"
                        android:layout_height="0dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/bpm_icon"
                        app:tint="#4DD0E1" />

                    <TextView
                        android:id="@+id/bpmText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="idk"
                        android:text="Heart Rate"

                        android:textColor="@color/text_color_black"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"></TextView>

                    <TextView
                        android:id="@+id/bpmValue"
                        android:layout_width="100dp"
                        android:layout_height="0dp"
                        android:autoSizeTextType="uniform"
                        android:foregroundGravity="bottom|right"
                        android:gravity="bottom|end"
                        android:includeFontPadding="false"
                        android:lineSpacingExtra="0dp"
                        android:padding="0dp"
                        android:text="222"
                        android:textColor="@color/text_color_black"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/bpmText"></TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginStart="8dp"
                        android:padding="0dp"
                        android:text="bpm"
                        android:textColor="@color/text_color_black"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="@id/bpmValue"
                        app:layout_constraintStart_toEndOf="@+id/bpmValue"></TextView>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/monthly"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="0dp"
                android:clipToPadding="true"
                app:cardBackgroundColor="#FFCDD2"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true"
                app:layout_columnSpan="1"
                app:layout_columnWeight="1"
                app:layout_gravity="fill"
                app:layout_rowSpan="1"
                app:layout_rowWeight="1">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp">

                    <ImageView
                        android:id="@+id/icon2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/weight"
                        app:tint="#E57373" />

                    <TextView
                        android:id="@+id/bpm2Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="idk"
                        android:text="Weight"
                        android:textColor="@color/text_color_black"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"></TextView>

                    <TextView
                        android:id="@+id/bpm2Value"
                        android:layout_width="60dp"
                        android:layout_height="0dp"
                        android:autoSizeTextType="uniform"
                        android:foregroundGravity="bottom|right"
                        android:gravity="bottom|end"
                        android:includeFontPadding="false"
                        android:lineSpacingExtra="0dp"
                        android:padding="0dp"
                        android:text="78.8"
                        android:textColor="@color/text_color_black"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/bpm2Text"></TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:padding="0dp"
                        android:text="kg"
                        android:textColor="@color/text_color_black"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="@id/bpm2Value"
                        app:layout_constraintStart_toEndOf="@+id/bpm2Value"></TextView>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/monthly2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="0dp"
                android:clipToPadding="true"
                app:cardBackgroundColor="#FFE0B2"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true"
                app:layout_columnSpan="1"
                app:layout_columnWeight="1"
                app:layout_gravity="fill"
                app:layout_rowSpan="1"
                app:layout_rowWeight="1">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp">

                    <ImageView
                        android:id="@+id/icon3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/height"
                        app:tint="#FFB74D" />

                    <TextView
                        android:id="@+id/bpm3Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="idk"
                        android:text="Height"
                        android:textColor="@color/text_color_black"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"></TextView>

                    <TextView
                        android:id="@+id/bpm3Value"
                        android:layout_width="60dp"
                        android:layout_height="0dp"
                        android:autoSizeTextType="uniform"
                        android:foregroundGravity="bottom|right"
                        android:gravity="bottom|end"
                        android:includeFontPadding="false"
                        android:lineSpacingExtra="0dp"
                        android:padding="0dp"
                        android:text="180"
                        android:textColor="@color/text_color_black"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/bpm3Text"></TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:padding="0dp"
                        android:text="cm"
                        android:textColor="@color/text_color_black"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="@id/bpm3Value"
                        app:layout_constraintStart_toEndOf="@+id/bpm3Value"></TextView>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

        </androidx.gridlayout.widget.GridLayout>

        <TextView
            android:id="@+id/idkTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quick Actions"
            android:textColor="@color/text_color_black"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <Button
            android:id="@+id/idk1"
            style="@style/Theme.PrimaryButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:onClick="openGrantAccessDialog"
            android:text="Grant access to EHR"
            android:textAllCaps="false"
            android:textSize="16sp"
            app:cornerRadius="200dp" />

        <Button
            android:id="@+id/idk2"
            style="@style/Theme.PrimaryButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:onClick="openRevokeAccessDialog"
            android:text="Revoke access to EHR"
            android:textAllCaps="false"
            android:textSize="16sp"
            app:cornerRadius="200dp" />

        <TextView
            android:id="@+id/quickActionsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Latest News"
            android:textColor="@color/text_color_black"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <androidx.cardview.widget.CardView
            android:id="@+id/news1"
            android:layout_width="match_parent"
            android:layout_height="94dp"
            android:orientation="vertical"
            app:cardBackgroundColor="@color/bgColor1"
            app:cardElevation="1dp"
            app:cardUseCompatPadding="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="0dp"
                    android:layout_height="46dp"
                    android:layout_marginStart="4dp"
                    android:text="The 25 Healthiest Fruits You Can Eat, According to a Nutrionist"
                    android:textColor="@color/text_color_black"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageButton"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginStart="4dp"
                    android:text="Jun 10, 2023."
                    android:textColor="@color/text_color_gray"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageButton"
                    app:layout_constraintTop_toBottomOf="@+id/textView5"
                    app:layout_constraintVertical_bias="0.0" />

                <ImageButton
                    android:id="@+id/imageButton"
                    android:layout_width="70dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="4dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="idk"
                    android:padding="0dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/example"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"></ImageButton>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>